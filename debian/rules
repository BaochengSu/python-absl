#!/usr/bin/make -f

export LC_ALL=C.UTF-8

%:
	dh $@ --with python3 --buildsystem=pybuild

override_dh_installchangelogs:
	dh_installchangelogs absl/CHANGELOG.md

override_dh_auto_install:
	dh_auto_install
	rm debian/python3-absl/usr/lib/python3*/dist-packages/absl/third_party/unittest3_backport/LICENSE
	rm debian/python3-absl/usr/lib/python3*/dist-packages/absl/CHANGELOG.md
